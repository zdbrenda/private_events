<h1>Created Events</h1>
<br/>
<% current_user.created_events.each do |event|%>
    <h2>Event Date: <%= event.event_date%></h2>
    <h2>Event Location: <%= event.location%></h2>
    <%= link_to "Event Details", event_path(event.id)%>
<% end %>

<nav class="nav">
    <div class="navbar-menu">
        <div class="field is-grouped">
            <p class="control">
                <%= link_to "Create New Event", new_event_path, class: "button is-dark"%>
            </p>
            <br/>
            <p class="control">
                <%= link_to "Show Attended Events", show_attended_events_path, class: "button is-dark"%>
            </p>
        </div>
    </div>
</nav>